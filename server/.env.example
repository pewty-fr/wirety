# Wirety Server Configuration

# Server Configuration
HTTP_PORT=8080

# Authentication Configuration
# Set to "true" to enable OIDC authentication, "false" for open mode (admin permissions for all)
AUTH_ENABLED=false

# OIDC Provider Configuration (required when AUTH_ENABLED=true)
# Example for Keycloak:
AUTH_ISSUER_URL=https://keycloak.example.com/realms/wirety
AUTH_CLIENT_ID=wirety-server

# Optional: JWKS cache TTL in seconds (default: 3600)
AUTH_JWKS_CACHE_TTL=3600

# Development Mode Example (No Authentication)
# AUTH_ENABLED=false
# HTTP_PORT=8080

# Production Mode Example (With Keycloak)
# AUTH_ENABLED=true
# AUTH_ISSUER_URL=https://keycloak.example.com/realms/wirety
# AUTH_CLIENT_ID=wirety-server
# HTTP_PORT=8080
